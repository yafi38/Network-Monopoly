<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" spacing="25.0" styleClass="green-background-image" stylesheets="@../css/BasicTheme.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.gamegui.GameGuiController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="15.0">
         <children>
            <Button fx:id="playerOneButton" mnemonicParsing="false" styleClass="small-button" text="Player 1" />
            <Button fx:id="playerTwoButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" styleClass="small-button" text="Player 2" />
            <Button fx:id="playerThreeButton" layoutX="10.0" layoutY="47.0" mnemonicParsing="false" styleClass="small-button" text="Player 3" />
            <Button fx:id="playerFourButton" layoutX="10.0" layoutY="84.0" mnemonicParsing="false" styleClass="small-button" text="Player 4" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
      <ImageView pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Board.jpg" />
         </image>
      </ImageView>
      <VBox alignment="TOP_CENTER" spacing="15.0">
         <children>
            <Label fx:id="playerTurn" text="Player's Turn" />
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@dice/one.png" />
               </image>
            </ImageView>
            <ImageView layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@dice/one.png" />
               </image>
            </ImageView>
            <Button mnemonicParsing="false" styleClass="small-button" text="Roll" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</HBox>
